<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:MonkeyFinder.Model"
             x:Class="MonkeyFinder.View.MainPage">

    <CollectionView>
        <CollectionView.ItemsSource>
            <x:Array Type="{x:Type model:Monkey}">
                <model:Monkey 
                    Name="Baboon"
                    Location="Some location 1"
                    Image="https://media.posterlounge.com/img/products/700000/697380/697380_poster.jpg"/>
                <model:Monkey 
                    Name="Capuchin Monkey"
                    Location="Some location 2"
                    Image="https://media.posterlounge.com/img/products/700000/697380/697380_poster.jpg"/>
                <model:Monkey 
                    Name="Red-shanked douc"
                    Location="Some location 3"
                    Image="https://media.posterlounge.com/img/products/700000/697380/697380_poster.jpg"/>
                <model:Monkey 
                    Name="Red-shanked douc"
                    Location="Some location 4"
                    Image="https://media.posterlounge.com/img/products/700000/697380/697380_poster.jpg"/>
                <model:Monkey 
                    Name="Red-shanked douc"
                    Location="Some location 5"
                    Image="https://media.posterlounge.com/img/products/700000/697380/697380_poster.jpg"/>
                <model:Monkey 
                    Name="Red-shanked douc"
                    Location="Some location 6"
                    Image="https://media.posterlounge.com/img/products/700000/697380/697380_poster.jpg"/>
                <model:Monkey 
                    Name="Red-shanked douc"
                    Location="Some location 7"
                    Image="https://media.posterlounge.com/img/products/700000/697380/697380_poster.jpg"/>
                <model:Monkey 
                    Name="Red-shanked douc"
                    Location="Some location 8"
                    Image="https://media.posterlounge.com/img/products/700000/697380/697380_poster.jpg"/>
            </x:Array>
        </CollectionView.ItemsSource>
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="model:Monkey">
                <HorizontalStackLayout Padding="10">
                    <Image Source="{Binding Image}"
                           HeightRequest="100"
                           WidthRequest="100"
                           Aspect="AspectFill"/>
                    <VerticalStackLayout Padding="10" Spacing="4" VerticalOptions="Center">
                        <Label Text="{Binding Name}" FontSize="24"></Label>
                        <Label Text="{Binding Location}" FontSize="12"></Label>
                    </VerticalStackLayout>
                </HorizontalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
